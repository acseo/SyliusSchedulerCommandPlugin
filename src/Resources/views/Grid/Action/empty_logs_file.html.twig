{% import '@SyliusUi/Macro/buttons.html.twig' as buttons %}

{% set path = options.link.url|default(path(options.link.route)) %}

<form action="{{ path }}" method="post">
    <input type="hidden" name="_method" value="PUT">
    <button class="ui orange labeled icon button" type="submit" data-bulk-action-requires-confirmation disabled>
        <i class="icon recycle"></i> {{ action.label|trans }}
    </button>
</form>
